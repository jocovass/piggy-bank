{
  "name": "piggy-bank",
  "author": "Jozsef Vass",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "remix vite:build",
    "dev": "remix vite:dev",
    "lint": "eslint .",
    "start": "remix-serve ./build/server/index.js",
    "db:check": "drizzle-kit check:pg --schema db/schema.ts --out ./db/drizzle",
    "db:generate": "drizzle-kit generate:pg --schema db/schema.ts --out ./db/drizzle",
    "db:migrate": "tsx ./db/migrate.ts",
    "db:push": "drizzle-kit push:pg",
    "db:seed": "tsx ./db.seed.ts",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "test:e2e:dev": "playwright test --ui",
    "test:e2e:install": "npx playwright install --with-deps chromium",
    "typecheck": "tsc"
  },
  "eslintIgnor": [
    "/node_modules",
    "/build",
    "/public/build",
    "/playwright-report",
    "/server-build"
  ],
  "dependencies": {
    "@date-fns/utc": "^1.2.0",
    "@epic-web/remember": "^1.0.2",
    "@neondatabase/serverless": "^0.9.0",
    "@paralleldrive/cuid2": "^2.2.2",
    "@radix-ui/react-slot": "^1.0.2",
    "@remix-run/node": "^2.8.1",
    "@remix-run/react": "^2.8.1",
    "@remix-run/serve": "^2.8.1",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "date-fns": "^3.6.0",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.30.10",
    "isbot": "^4.1.0",
    "lucide-react": "^0.378.0",
    "pg": "^8.11.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^2.3.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@playwright/test": "^1.43.0",
    "@remix-run/dev": "^2.8.1",
    "@remix-run/eslint-config": "^2.8.1",
    "@remix-run/testing": "^2.8.1",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.2",
    "@testing-library/user-event": "^14.5.2",
    "@total-typescript/ts-reset": "^0.5.1",
    "@types/eslint": "^8.56.7",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^1.4.0",
    "autoprefixer": "^10.4.19",
    "drizzle-kit": "^0.20.17",
    "enforce-unique": "^1.3.0",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-no-relative-import-paths": "^1.5.4",
    "eslint-plugin-remix-react-routes": "^1.0.5",
    "jsdom": "^24.0.0",
    "msw": "^2.2.13",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.5",
    "prettier-plugin-sql": "^0.18.0",
    "prettier-plugin-tailwindcss": "^0.5.13",
    "remix-flat-routes": "^0.6.4",
    "tailwindcss": "^3.4.3",
    "tailwindcss-animate": "^1.0.7",
    "tailwindcss-radix": "^3.0.3",
    "tsx": "^4.7.2",
    "typescript": "^5.4.2",
    "vite": "^5.1.6",
    "vite-tsconfig-paths": "^4.2.1",
    "vitest": "^1.4.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
